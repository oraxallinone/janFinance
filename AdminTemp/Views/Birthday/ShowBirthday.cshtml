@{
    ViewBag.Title = "Birthday Calendar";
    Layout = "~/Views/Shared/_WebLayout.cshtml";
}

<div class="app-content">
    <div class="container-fluid">
        <div class="card card-primary card-outline mb-4">
            <div class="card-body">
                <style>
                    /* Birthday calendar styling */
                    .birthday-calendar-container { max-width: 900px; width: 90%; margin: 0 auto; }
                    .birthday-calendar-container .calendar-header { display:flex; align-items:center; justify-content:center; gap:8px; margin-bottom:8px; }
                    .birthday-calendar-container .calendar-header button { width:36px; }
                    .birthday-calendar-container .calendar-header span { font-weight:600; }
                    .birthday-calendar-container .calendar-table { width:100%; table-layout:fixed; border-collapse:collapse; }
                    .birthday-calendar-container .calendar-table th,
                    .birthday-calendar-container .calendar-table td { border:1px solid #e6e6e6; padding:8px; vertical-align:top; min-height:90px; height:89px; box-sizing:border-box; overflow:hidden; }
                    .birthday-calendar-container .calendar-table thead th { background: linear-gradient(to right, #175787d4, #175787d4); background-size:cover; color:#fff; text-align:left; }
                    /* Birthday / today colors */
                    .birthday-calendar-container .calendar-table td.bg-warning { background:#ffc107; color:#000; }
                    .birthday-calendar-container .calendar-table td.bg-info { background:#17a2b8; color:#fff; }
                    .birthday-calendar-container .calendar-table td strong { display:block; margin-bottom:6px; }
                </style>

                <div id="birthdayCalendar" class="birthday-calendar-container"></div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/birthday.js"></script>
    <script>
        $(function () {
            // render current month calendar
            renderBirthdayCalendar('#birthdayCalendar');
        });
    </script>
}
