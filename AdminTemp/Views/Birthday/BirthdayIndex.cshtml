@{
    ViewBag.Title = "Birthday Index";
    Layout = "~/Views/Shared/_WebLayout.cshtml";
}

<link href="~/Content/group.css" rel="stylesheet" />

<div class="app-content">
    <div class="container-fluid">
        <div class="card card-primary card-outline mb-4">
            <div class="card-body">
                <div class="row g-3 mb-3">
                    <div class="col-md-4">
                        <input id="txtName" class="form-control" placeholder="Name" />
                    </div>
                    <div class="col-md-3">
                        <input id="txtDOB" type="date" class="form-control" />
                    </div>
                    <div class="col-md-2">
                        <div class="form-check">
                            <input id="chkIsActive" class="form-check-input" type="checkbox" />
                            <label class="form-check-label" for="chkIsActive">Is Active</label>
                        </div>
                    </div>
                    <div class="col-md-3" style="text-align:right">
                        <input id="hidenBirthdayID" type="hidden" />
                        <button id="btnSaveBirthday" class="btn btn-info">Save</button>
                        <button id="btnUpdateBirthday" class="btn btn-warning" style="display:none">Update</button>
                        <button id="btnCancelBirthday" class="btn btn-secondary" style="display:none">Cancel</button>
                    </div>
                </div>

                <table class="table table-hover" id="birthdayTable">
                    <thead>
                        <tr><th>#</th><th>Name</th><th>Date Of Birth</th><th>Is Active</th><th>Action</th></tr>
                    </thead>
                    <tbody></tbody>
                </table>

            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/birthday.js"></script>
}
