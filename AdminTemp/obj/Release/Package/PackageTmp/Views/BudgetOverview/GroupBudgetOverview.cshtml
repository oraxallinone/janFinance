
@{
    ViewBag.Title = "GroupBudgetOverview";
    Layout = "~/Views/Shared/_WebLayout.cshtml";
}


<link href="~/Content/budget-overview.css" rel="stylesheet" />
<div class="app-content">
    <div class="container-fluid">
        <div class="row g-4">

            <div class="col-md-12">
                <div class="card card-primary card-outline mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-1">
                                <div class="floating-label-group">
                                    <select class="form-control form-control-sm" id="ddlYear">
                                        <option value="0">--Year--</option>
                                        <option value="2025">2025</option>
                                        <option value="2026">2026</option>
                                        <option value="2027">2027</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="floating-label-group">
                                    <select class="form-control form-control-sm" id="ddlMonth">
                                        <option value="0">--Month--</option>
                                        <option value="1">January</option>
                                        <option value="2">February</option>
                                        <option value="3">March</option>
                                        <option value="4">April</option>
                                        <option value="5">May</option>
                                        <option value="6">June</option>
                                        <option value="7">July</option>
                                        <option value="8">August</option>
                                        <option value="9">September</option>
                                        <option value="10">October</option>
                                        <option value="11">November</option>
                                        <option value="12">December</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        

                        <div class="div-responsive">
                            <table id="gridGroupOverview" class="custom-tbl-common" border="1">
                                <thead>
                                    <tr>
                                        <th style="width:5%">#</th>
                                        <th style="width:15%;text-align: left">Group Name</th>
                                        <th style="width:20%;text-align: left">Spending</th>
                                        <th style="width:20%">Budget</th>
                                        <th style="">Remain</th>
                                    </tr>
                                </thead>
                                <tbody>
                                   <tr>
                                       <td>1</td>
                                       <td>Food</td>
                                       <td>2000</td>
                                       <td>10000</td>
                                       <td>8000</td>
                                   </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer" style="text-align:right;background-color: #1d68a075;">
                        <div class="row" style="height: 27px;">
                            
                        </div>
                    </div>
                </div>
            </div>

        </div>


    </div>
</div>

<script src="~/Scripts/budgetOverview.js"></script>