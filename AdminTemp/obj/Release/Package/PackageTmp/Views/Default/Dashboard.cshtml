@*|| dashboard.css || dashboard.js ||*@

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_WebLayout.cshtml";
}


<link href="~/Content/dashboard.css" rel="stylesheet" />

<div class="app-content">
    <div class="container-fluid">
        <div class="row">

            <!-- Year & Month Selection -->
            <div class="col-md-12">
                <div class="card card-primary card-outline mb-4" style="height: 70px;">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-2">
                                <div class="floating-label-group">
                                    <select class="form-control form-control-sm" id="ddlYear">
                                        <option value="0">--Year--</option>
                                        <option value="2025">2024</option>
                                        <option value="2025">2025</option>
                                        <option value="2026">2026</option>
                                        <option value="2027">2027</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="floating-label-group">
                                    <select class="form-control form-control-sm" id="ddlMonth">
                                        <option value="0">--Month--</option>
                                        <option value="1">January</option>
                                        <option value="2">February</option>
                                        <option value="3">March</option>
                                        <option value="4">April</option>
                                        <option value="5">May</option>
                                        <option value="6">June</option>
                                        <option value="7">July</option>
                                        <option value="8">August</option>
                                        <option value="9">September</option>
                                        <option value="10">October</option>
                                        <option value="11">November</option>
                                        <option value="12">December</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <button id="btnLoadDashboard" class="btn btn-sm btn-primary wd-btn" style="width:100%;" type="button">
                                    <i class="bi bi-arrow-clockwise"></i> Load
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Dashboard Cards Row -->
            <div class="col-md-12" style="margin-top:-1%;">
                <div class="row g-4">

                    <!-- Total Budget Card -->
                    <div class="col-lg-3 col-md-6 col-sm-12">
                        <div class="dashboard-card card-total-budget">
                            <div class="card-icon">
                                <i class="bi bi-wallet2"></i>
                            </div>
                            <div class="card-content">
                                <h5 class="card-label">Total Budget</h5>
                                <h2 class="card-value" id="dashTotalBudget">₹ 0.00</h2>
                                <p class="card-desc">Fixed Amount</p>
                            </div>
                        </div>
                    </div>

                    <!-- Spending Amount Card -->
                    <div class="col-lg-3 col-md-6 col-sm-12">
                        <div class="dashboard-card card-spending">
                            <div class="card-icon">
                                <i class="bi bi-credit-card"></i>
                            </div>
                            <div class="card-content">
                                <h5 class="card-label">Spending Amount</h5>
                                <h2 class="card-value" id="dashSpendingAmount">₹ 0.00</h2>
                                <p class="card-desc">Total Spent</p>
                            </div>
                        </div>
                    </div>

                    <!-- Remaining Amount Card -->
                    <div class="col-lg-3 col-md-6 col-sm-12">
                        <div class="dashboard-card card-remaining">
                            <div class="card-icon">
                                <i class="bi bi-piggy-bank"></i>
                            </div>
                            <div class="card-content">
                                <h5 class="card-label">Remaining Amount</h5>
                                <h2 class="card-value" id="dashRemainingAmount">₹ 0.00</h2>
                                <p class="card-desc">Budget Left</p>
                            </div>
                        </div>
                    </div>

                    <!-- Total Summary Card -->
                    <div class="col-lg-3 col-md-6 col-sm-12">
                        <div class="dashboard-card card-total-summary">
                            <div class="card-icon">
                                <i class="bi bi-graph-up"></i>
                            </div>
                            <div class="card-content">
                                <h5 class="card-label">Budget Summary</h5>
                                <p class="card-percentage" id="dashPercentage">0%</p>
                                <p class="card-desc">Spent of Total</p>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <!-- Details Table Row -->
            <div class="col-md-12" style="margin-top:1%;">
                <div class="card card-primary card-outline">
                    <div class="div-responsive-dash">
                        <table id="gridGroupBreakdown" class="table-dashboard" border="1">
                            <thead>
                                <tr>
                                    <th style="width:5%">#</th>
                                    <th style="width:15%">Group Name</th>
                                    <th style="width:10%">Total Budget</th>
                                    <th style="width:10%">Spent</th>
                                    <th style="width:10%">Remaining</th>
                                    <th style="width:40%">% Used</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="6" class="text-center">Select Year & Month to load data</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<script src="~/Scripts/dashboard.js"></script>

