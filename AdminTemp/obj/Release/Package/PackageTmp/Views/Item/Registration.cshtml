
@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_WebLayout.cshtml";
}

<style>
    .custom-ddl {
        height: 33px;
        border-color: rgba(39,110,165,0.6);
        font-size: 15px;
    }
    .wd-100 {
        width: 100px;
    }
</style>
<div class="app-content">
    <div class="container-fluid">
        <div class="row g-4">

            <div class="col-md-12 col-sm-6 col-4">
                <div class="card card-primary card-outline mb-4">
                    <div class="card-header"><div class="card-title">Add New Item</div></div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3 col-sm-12 col-12">
                                <div class="floating-label-group">
                                    <input type="text" class="form-control form-control-sm" id="txtItemCode" placeholder="" />
                                    <label for="txtItemCode">Item Code *</label>
                                </div>
                            </div>
                            <div class="col-md-3  col-sm-12 col-12">
                                <div class="floating-label-group">
                                    <input type="text" class="form-control form-control-sm" id="txtItemName" placeholder="" />
                                    <label for="txtItemName">Item Name *</label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="input-group ">
                                    <span class="input-group-text custom-ddl" id="ddlUnit">Unit *</span>
                                    <select id="ddlUnit" class="form-control form-control-sm custom-ddl">
                                        <option value="1">-- Please select one --</option>
                                        <option value="2">Full</option>
                                        <option value="3">Half</option>
                                        <option value="4">PC</option>
                                        <option value="5">KG</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="floating-label-group">
                                    <input type="text" class="form-control form-control-sm" id="txtPrice" placeholder="" />
                                    <label for="txtPrice">Price *</label>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3">
                                <div class="input-group ">
                                    <span class="input-group-text custom-ddl">GST</span>
                                    <select id="ddlGst" class="form-control form-control-sm custom-ddl">
                                        <option>-- Please select one --</option>
                                        <option>5</option>
                                        <option>12</option>
                                        <option>18</option>
                                        <option>28</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="floating-label-group">
                                    <input type="text" class="form-control form-control-sm" id="txtHSN" placeholder="" />
                                    <label for="txtHSN">HSN</label>
                                </div>
                            </div>


                        </div>

                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="chkItemIsActive" />
                                    <label class="form-check-label" for="chkItemIsActive">
                                        Is Active
                                    </label>
                                </div>
                            </div>
                        </div>


                    </div>
                    <div class="card-footer" style="text-align:right">
                        <button id="btnClearItem" class="btn btn-outline-danger wd-100" type="button">Clear</button>
                        <button id="btnSaveItem" class="btn btn-info wd-100" type="button">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

