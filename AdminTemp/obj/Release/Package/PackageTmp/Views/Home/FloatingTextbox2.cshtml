
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bootstrap 3 Floating Labels - All Inputs (Pure CSS)</title>
    <!-- Bootstrap 3 CSS CDN -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f0f0f0;
            padding: 50px;
        }

        .floating-label-group {
            position: relative;
            margin-bottom: 30px;
        }

            .floating-label-group .form-control {
                padding: 5px 12px;
                height: auto;
                border: 2px solid #276ea5;
                border-radius: 4px;
                background: transparent;
            }

            .floating-label-group label {
                position: absolute;
                border-radius: 4px;
                top: 9px;
                left: 12px;
                color: #656889;
                font-size: 14px;
                pointer-events: none;
                transition: all 0.2s ease;
                background-color: #f0f0f0;
                padding: 0 4px;
            }

            /* Floating logic for all supported fields */
            .floating-label-group input:focus + label,
            .floating-label-group input:not(:placeholder-shown) + label,
            .floating-label-group textarea:focus + label,
            .floating-label-group textarea:not(:placeholder-shown) + label {
                top: -10px;
                left: 8px;
                font-size: 12px;
                color: #333;
            }

            /* File input exception: float label manually */
            .floating-label-group input[type="file"] + label {
                top: -10px;
                left: 8px;
                font-size: 12px;
                color: #333;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Bootstrap 3 Floating Labels - All Inputs (Pure CSS)</h2>

        <div class="row">
            <!-- Text -->
            <div class="col-md-3">
                <div class="floating-label-group">
                    <input type="text" class="form-control" id="username" placeholder=" " />
                    <label for="username">Username</label>
                </div>
            </div>

            <!-- Email -->
            <div class="col-md-3">
                <div class="floating-label-group">
                    <input type="email" class="form-control" id="email" placeholder=" " />
                    <label for="email">Email Address</label>
                </div>
            </div>

            <!-- Password -->
            <div class="col-md-3">
                <div class="floating-label-group">
                    <input type="password" class="form-control" id="password" placeholder=" " />
                    <label for="password">Password</label>
                </div>
            </div>

            <!-- Number -->
            <div class="col-md-3">
                <div class="floating-label-group">
                    <input type="number" class="form-control" id="age" placeholder=" " />
                    <label for="age">Age</label>
                </div>
            </div>

            <!-- Date -->
            <div class="col-md-3">
                <div class="floating-label-group">
                    <input type="date" class="form-control" id="dob" placeholder=" " />
                    <label for="dob">Date of Birth</label>
                </div>
            </div>

            <!-- Tel -->
            <div class="col-md-3">
                <div class="floating-label-group">
                    <input type="tel" class="form-control" id="phone" placeholder=" " />
                    <label for="phone">Phone Number</label>
                </div>
            </div>

            <!-- URL -->
            <div class="col-md-3">
                <div class="floating-label-group">
                    <input type="url" class="form-control" id="website" placeholder=" " />
                    <label for="website">Website</label>
                </div>
            </div>

            <!-- Search -->
            <div class="col-md-3">
                <div class="floating-label-group">
                    <input type="search" class="form-control" id="search" placeholder=" " />
                    <label for="search">Search</label>
                </div>
            </div>

            <!-- Color -->
            <div class="col-md-3">
                <div class="floating-label-group">
                    <input type="color" class="form-control" id="favcolor" placeholder=" " />
                    <label for="favcolor">Favorite Color</label>
                </div>
            </div>

            <!-- File (manual label float) -->
            <div class="col-md-3">
                <div class="floating-label-group">
                    <input type="file" class="form-control" id="uploadfile" />
                    <label for="uploadfile">Upload File</label>
                </div>
            </div>

            <!-- Textarea -->
