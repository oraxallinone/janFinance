@model IEnumerable<AdminTemp.Areas.GstBill.Models.ItemMaster>
@{
    ViewBag.Title = "ItemList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-info">
                        <div class="card-header">
                            <div class="col-4">
                                <h3 class="card-title">Item List</h3>
                            </div>
                            <div class="offset-10 col-2 textRight">
                                <a href="/GstBill/Product/ItemAdd" class="btn btn-outline-dangerCustome1 btn-dangerCustome1 btn-xs">Add New Item</a>
                            </div>
                        </div>
                        <div>
                            <div class="card-body">

                                <div class="row">
                                    <table width="100%" class="tableCust table-hover" style="border: 1px solid #3574a4b0">
                                        <tr class="fontMenuHeader textCenter">
                                            <td style="width:5% ;text-align: center;"> Sl No </td>
                                            <td style="width: 30%; text-align: left"> Item Name  </td>
                                            <td style="width: 15%; text-align: left">Item Code </td>
                                            <td style="width:15% ;"> HSN </td>
                                            <td style="width:10% ;"> Rate </td>
                                            <td style="width:5% ;"> GST </td>
                                            <td style="width:10% ;"> ACTION </td>
                                        </tr>
                                        <tbody id="itemTableBody"></tbody>
                                    </table>
                                </div>
                                <div class="row">
                                    <div class="col-md-12 text-center" id="paginationContainer"></div>
                                </div>
                                <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
                                <script type="text/javascript">
                                var items = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model));
                                var itemsPerPage = 20;
                                var currentPage = 1;

                                function renderTable(page) {
                                    var start = (page - 1) * itemsPerPage;
                                    var end = start + itemsPerPage;
                                    var pagedItems = items.slice(start, end);
                                    var snNo = items.length - start;
                                    var html = '';
                                    pagedItems.forEach(function(itm, idx) {
                                        var bgModified = itm.IsActive ? '' : '#f4240438';
                                        html += '<tr class="fontMenuBody" style="border: 1px solid #3574a4b0;background-color:' + bgModified + '">';
                                        html += '<td class="textCenter">' + (snNo - idx) + '</td>';
                                        html += '<td>' + itm.ItemDetails + '</td>';
                                        html += '<td>' + itm.ItemCode + '</td>';
                                        html += '<td class="textCenter">' + itm.HSN + '</td>';
                                        html += '<td class="textCenter">' + itm.Rate + '</td>';
                                        html += '<td class="textCenter">' + itm.Gst + '</td>';
                                        html += '<td class="textCenter">';
                                        html += '<a href="/GstBill/Product/ItemView/' + itm.ItemId + '"> <i class="fa-solid fa-eye"></i></a>|';
                                        html += '<a href="/GstBill/Product/ItemEdit/' + itm.ItemId + '"> <i class="fa-solid fa-pen-to-square"></i></a>';
                                        html += '</td>';
                                        html += '</tr>';
                                    });
                                    $('#itemTableBody').html(html);
                                }

                                function renderPagination() {
                                    var totalPages = Math.ceil(items.length / itemsPerPage);
                                    var html = '';
                                    if (totalPages > 1) {
                                        html += '<ul class="pagination" style="justify-content:center;">';
                                        for (var i = 1; i <= totalPages; i++) {
                                            html += '<li class="page-item' + (i === currentPage ? ' active' : '') + '"><a href="#" class="page-link" data-page="' + i + '">' + i + '</a></li>';
                                        }
                                        html += '</ul>';
                                    }
                                    $('#paginationContainer').html(html);
                                }

                                $(document).ready(function () {
                                    renderTable(currentPage);
                                    renderPagination();

                                    $('#paginationContainer').on('click', '.page-link', function (e) {
                                        e.preventDefault();
                                        var page = parseInt($(this).data('page'));
                                        if (page !== currentPage) {
                                            currentPage = page;
                                            renderTable(currentPage);
                                            renderPagination();
                                        }
                                    });
                                });
                                </script>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

